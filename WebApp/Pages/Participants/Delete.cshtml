@page
@model WebApp.Pages.Participants.DeleteModel

@{
    ViewData["Title"] = "Delete";
    ViewData["currentPage"] = "none";
    
}
<div class="row bg-white">
<div>
    <div class="row rik-banner-bg-color">
        <div class="col-4 ">
            <h1 class="fs-3 pt-3 text-white fw-lighter">Osavõtja kustutamine</h1>
        </div>
        <div class="col p-0" style="height: 75px; overflow: hidden;">
            <img src="/images/libled.jpg">
        </div>
    </div>
    <div class="row justify-content-md-center pt-4 py-5">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <h1 class="rik-text-color fs-4 fw-light">Kindel, et tahad osavõtja kustutada?</h1>
            <div id="participantDetails" class="my-3">
                @{
                    if (!Model.Participant.IsCompany)
                    {
                        <div id="citizenDetails">
                            <div class="form-group row">
                                <label asp-for="Participant.FirstName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext " value="@Model.Participant.FirstName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Participant.LastName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.LastName">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label asp-for="Participant.SocialsecurityNumber" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.SocialsecurityNumber">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Participant.Comment" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.Comment">
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div id="corporationDetails">
                            <div class="form-group row">
                                <label asp-for="Participant.CorporationName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.CorporationName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Participant.CorporationCode" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.CorporationCode">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Participant.CorporationParcitipationsCount" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.CorporationParcitipationsCount">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Participant.Comment" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 px-0">
                                    <input type="text" readonly class="form-control-plaintext" value="@Model.Participant.Comment">
                                </div>
                            </div>
                        </div>
                    }}


                <form method="post" class="my-4">
                    <input type="hidden" asp-for="Participant.Id"/>
                    <a href="/Events/AddParticipants?id=@Model.Participant.EventId" class="btn btn-secondary" role="button">Tagasi</a>
                    <input type="submit" value="Kustuta" class="btn btn-danger"/>
                </form>
            </div>




        </div>
    </div>
    </div>
</div>